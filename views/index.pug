include ../partials/header.pug
section.wrap
  h1 Qui prend quoi ?
  h2 Créer un événement :
  form(method="post" action="/party").newParty
    div.newParty__fields
      label(for="name") Nom de l'événement
      input(name="name" id="name" required minlength="3" placeholder="Fête de la Musique")
      label(for="author" required) Auteur de l'événement
      input(name="author" id="author" required minlength="3" placeholder="Emma")
      label(for="date") Date de l'événement
      input(name="date" id="date" type="date")
    button(type="submit") Créer